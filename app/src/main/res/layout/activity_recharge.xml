<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray12"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="充值金额"
                android:textColor="@color/gray10"
                android:textSize="@dimen/textsize_4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额（元）"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/textsize_4" />

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请在这里输入"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/gray10"
                    android:textSize="@dimen/textsize_4" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="充值方式"
                android:textColor="@color/gray10"
                android:textSize="@dimen/textsize_4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ll_zfb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/stu_iv_zfb" />

                    <TextView
                        android:id="@+id/tv_zfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="移动支付宝"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_4" />

                    <ImageView
                        android:id="@+id/iv_zfb"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/dui" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/gray12" />

                <LinearLayout
                    android:id="@+id/ll_wx"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/stu_iv_weixin" />

                    <TextView
                        android:id="@+id/tv_yl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="微信支付"
                        android:textColor="@color/gray10"
                        android:textSize="@dimen/textsize_4" />

                    <ImageView
                        android:id="@+id/iv_yl"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/duik" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_common_bg"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>