<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray12"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_title"
        layout="@layout/include_title" />

    <com.heizi.mycommon.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入转赠的手机帐号"
                android:inputType="phone"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textColor="@color/black2"
                android:textSize="@dimen/textsize_4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray2" />

            <EditText
                android:id="@+id/et_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入转赠数量"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textColor="@color/black2"
                android:textSize="@dimen/textsize_4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray2" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="请输入登录密码"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textColor="@color/black2"
                android:textSize="@dimen/textsize_4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray2" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_common_bg"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_5" />

        </LinearLayout>
    </com.heizi.mycommon.view.MyScrollView>

</LinearLayout>
